<% @character.errors.full_messages.each do |message| %>
  <p>
    <%= message %>
  </p>
<% end %>

<%= form_for @character do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>

  <%= f.label :house_id %>
  <%= f.select :house_id, options_for_select(@house.map{ |x| [x.name, x.id]}) %>
  <%= f.submit %>
<% end %>
